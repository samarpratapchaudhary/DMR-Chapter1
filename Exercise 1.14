/* Write a program to print a histogram of the frequencies of different characters in its input. */
#include <stdio.h>

#define MAXCHARS 128   // ASCII limit (printable characters 32â€“126)

int main() {
    int c;
    int freq[MAXCHARS] = {0};   // frequency array initialized to 0

    // Count characters
    while ((c = getchar()) != EOF) {
        if (c < MAXCHARS) {
            ++freq[c];
        }
    }

    // Print horizontal histogram
    printf("\nHorizontal Histogram of Character Frequencies\n");
    for (int i = 32; i < MAXCHARS; i++) {   // skip control chars
        if (freq[i] > 0) {
            printf("%3c (%3d): ", i, i);   // show char and ASCII code
            for (int j = 0; j < freq[i]; j++)
                putchar('*');
            putchar('\n');
        }
    }

    return 0;
}
