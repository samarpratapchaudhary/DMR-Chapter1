/* Write a program to copy its input to its output, replacing each tab by \t, each backspace by \b, and each backlash by \\. This makes tabs and backspaces visible in an unambiguous way. */
#include <stdio.h>

int main() {
    int c;

    printf("Type something:\n");

    while ((c = getchar()) != EOF) {
        if (c == '\t') {
            printf("\\t");      // make tab visible
        } else if (c == '\b') {
            printf("\\b");      // make backspace visible
        } else if (c == '\\') {
            printf("\\\\");     // make backslash visible
        } else {
            putchar(c);         // print normally
        }
    }

    return 0;
}
