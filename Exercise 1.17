/* WAP to print input lines that are longer than 80 characters */
#include <stdio.h>
#define MAXLINE 1000   // maximum buffer size

int getlinex(char line[], int maxline);

int main() {
    int len;                  // length of current line
    char line[MAXLINE];       // buffer to store input line

    while ((len = getlinex(line, MAXLINE)) > 0) {
        if (len > 80) {       // check length
            printf("%s", line);
        }
    }
    return 0;
}

/* getlinex: read a line into s, return its length */
int getlinex(char s[], int lim) {
    int c, i;

    for (i = 0; i < lim - 1 && (c = getchar()) != EOF && c != '\n'; ++i)
        s[i] = c;

    if (c == '\n') {
        s[i] = c;
        ++i;
    }

    s[i] = '\0';
    return i;
}
