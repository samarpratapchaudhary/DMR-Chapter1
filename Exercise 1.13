/* Write a program to print a histogram of the lengths of words in its input. It is easy to draw the histogram with the bars horizontal; a vertical orientation is more challenging. */
#include <stdio.h>

#define IN  1
#define OUT 0
#define MAXLEN 20

int main() {
    int c, state = OUT, length = 0;
    int wordlen[MAXLEN+1];
    for (int i = 0; i <= MAXLEN; i++)
        wordlen[i] = 0;

    // Count lengths
    while ((c = getchar()) != EOF) {
        if (c == ' ' || c == '\t' || c == '\n') {
            if (state == IN) {
                if (length <= MAXLEN)
                    ++wordlen[length];
                else
                    ++wordlen[MAXLEN];
                length = 0;
                state = OUT;
            }
        } else {
            state = IN;
            ++length;
        }
    }

    // Find maximum frequency
    int max = 0;
    for (int i = 1; i <= MAXLEN; i++) {
        if (wordlen[i] > max)
            max = wordlen[i];
    }

    // Print vertical histogram
    printf("\nVertical Histogram of Word Lengths\n");
    for (int level = max; level > 0; level--) {
        for (int i = 1; i <= MAXLEN; i++) {
            if (wordlen[i] >= level)
                printf(" * ");
            else
                printf("   ");
        }
        putchar('\n');
    }

    // Print labels
    for (int i = 1; i <= MAXLEN; i++)
        printf("%2d ", i);
    putchar('\n');

    return 0;
}
